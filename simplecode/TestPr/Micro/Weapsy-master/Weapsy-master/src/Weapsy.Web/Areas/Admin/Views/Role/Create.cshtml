@using Weapsy.Data.TempIdentity
@model Weapsy.Data.TempIdentity.ApplicationRole

@{
    ViewBag.Title = "Create New Role";
}

@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/admin/roles/shared.js"></script>
    <script src="~/js/admin/roles/create.js"></script>
}

<div class="page-header">
    <h1>Create New Role</h1>
</div>

<form id="createRoleForm" name="createRoleForm" data-ajax="true" data-ajax-method="POST" data-ajax-url="/Admin/Role/Save" data-ajax-loading="#savingRole" data-ajax-success="weapsy.admin.roles.redirectToIndex" class="form-horizontal validate-form" role="form">    
    @await Html.PartialAsync("_Role")
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button id="save" type="submit" class="btn btn-primary" title="Save">Save</button>
            <a href="@Url.Action("Index", "Role", new { area = "Admin" })" class="btn btn-default" title="Cancel">Cancel</a>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <span id="savingRole" style="display:none;">
                Saving...
            </span>
        </div>
    </div>
</form>