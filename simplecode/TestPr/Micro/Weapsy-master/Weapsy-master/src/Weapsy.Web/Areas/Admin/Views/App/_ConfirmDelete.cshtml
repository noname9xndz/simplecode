@using Weapsy.Web.Resources.Areas.Admin
@inject IHtmlLocalizer<App> AppLocalizer

<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="deleteModal">@AppLocalizer["ConfirmDelete_Title"]</h4>
            </div>
            <div class="modal-body">
                @AppLocalizer["ConfirmDelete_Message"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Localizer["Button_Cancel"]</button>
                <a id="confirmDelete" class="btn btn-danger btn-ok disabled" data-dismiss="modal">@Localizer["Button_Delete"]</a>
            </div>
        </div>
    </div>
</div>