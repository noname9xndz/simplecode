@using Weapsy.Reporting.Apps
@model Weapsy.Reporting.Apps.ModuleTypeAdminModel

@{
    ViewBag.Title = "Edit Module Type";
}

@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/admin/moduleTypes/shared.js"></script>
    <script src="~/js/admin/moduleTypes/edit.js"></script>
}

<div class="page-header">
    <h1>Edit Module Type</h1>
</div>

<form id="editModuleTypeForm" name="editModuleTypeForm" data-ajax="true" data-ajax-method="PUT" data-ajax-url="/Admin/ModuleType/Update" data-ajax-loading="#savingModuleType" data-ajax-success="weapsy.admin.moduleTypes.redirectToIndex" class="form-horizontal validate-form" role="form">
    <input type="hidden" id="id" name="id" value="@Model.Id" />

    @await Html.PartialAsync("_ModuleType")

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button id="save" type="submit" class="btn btn-primary" title="Save">Save</button>
            <a id="deleteModuleType" class="btn btn-danger" data-toggle="modal" data-target="#confirm-delete" title="Delete">Delete</a>
            <a href="@Url.Action("Index", "ModuleType", new { area = "Admin" })" class="btn btn-default" title="Cancel">Cancel</a>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <span id="savingModuleType" style="display:none;">
                Saving...
            </span>
        </div>
    </div>
</form>

@await Html.PartialAsync("_ConfirmDelete")