@using Weapsy.Reporting.Users
@model UserAdminModel

@{
    ViewBag.Title = "Create New User";
}

@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/admin/users/shared.js"></script>
    <script src="~/js/admin/users/create.js"></script>
}

<div class="page-header">
    <h1>Create New User</h1>
</div>

<form id="createUserForm" name="createUserForm" data-ajax="true" data-ajax-method="POST" data-ajax-url="api/user" data-ajax-loading="#savingUser" data-ajax-success="weapsy.admin.users.redirectToIndex" class="form-horizontal validate-form" role="form">    
    @await Html.PartialAsync("_User")
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button id="save" type="submit" class="btn btn-primary" title="Save">Save</button>
            <a href="@Url.Action("Index", "User", new { area = "Admin" })" class="btn btn-default" title="Cancel">Cancel</a>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <span id="savingUser" style="display:none;">
                Saving...
            </span>
        </div>
    </div>
</form>