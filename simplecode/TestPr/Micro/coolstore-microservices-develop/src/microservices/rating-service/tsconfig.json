{
  "compilerOptions": {
    "outDir": ".",
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
     "./*.ts"
  ],
  "exclude": [
    "node_modules",
    "docs"
  ]
}
